---
import AnimationOverlay from "components/AnimationOverlay.svelte";
import Footer from "components/Footer.svelte";
import Hero from "components/Hero.svelte";
import Navbar from "components/Navbar.svelte";
import ScrollRestoration from "components/ScrollRestoration.svelte";
import SectionEvent from "components/SectionEvent.svelte";
import SectionExplain from "components/SectionExplain.svelte";
import SectionExplain2 from "components/SectionExplain2.svelte";
import SectionGameplay from "components/SectionGameplay.svelte";
import SectionTrailer from "components/SectionTrailer.svelte";
import BaseLayout from "layouts/BaseLayout.astro";

const locale = 'en'
---

<BaseLayout title="SpinBack - Official Website">
  <ScrollRestoration client:load />

  <Navbar {locale} client:load />
  <Hero {locale} client:load />

  <SectionExplain {locale} client:load />
  <SectionExplain2 {locale} client:load />
  <SectionTrailer {locale} client:load />
  <SectionGameplay {locale} client:load />
  <SectionEvent {locale} client:load />
  
  <AnimationOverlay client:load />
  <Footer {locale} />
</BaseLayout>
